#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin >> t;
	while (t--)
	{
	    int n;
	    cin >> n;
	    bool present = false;
	    int cnt = 0;
	    vector<int> a(n);
	    for (int i=0;i<n;i++)
	    {
	        cin >> a[i];
	    }
	    for (int i=0;i<n;i++)
	    {
	        if (a[i] % 2 == 1)
	        {
	            cnt++;
	        }
	    }
	    if (cnt==1)
	    {
	        cout << "Yes" << endl;
	    }
	    else
	    {
	        cout << "No" << endl;
	    }
	}

}
