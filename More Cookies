#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin >> t;
	while (t--)
	{
	    int n,c;
	    cin >> n >> c;
	    vector<int> a(n);
	    for (int i=0;i<n;i++)
	    {
	        cin >> a[i];
	    }
	    sort(a.begin(),a.end());
	    bool small = false;
	    bool not_equal = false;
	    vector<int> ans(n);
	    for (int i=0;i<n;i++)
	    {
	        if (a[i] - c < 0)
	        {
	            small=true;
	        }
	        if (a[i]==c)
	        {
	            not_equal = true;
	        }
	        ans[i] = max(0,a[i]-c);
	    }
	    if (small && !not_equal)
	    {
	        cout << 0 << endl;
	    }
	    else
	    {
	        bool pav = false;
	        sort(ans.begin(), ans.end());
            for (int i = 1; i < n; i++) 
            {
                if (ans[i] - ans[i-1] > 1)
                {
                    pav = true;
                    cout << ans[i-1]+1 << endl;
                    break;
                }
            }
            if (!pav)
            {
                cout << ans[n-1] + 1 << endl;
            }
	    }
	}

}
