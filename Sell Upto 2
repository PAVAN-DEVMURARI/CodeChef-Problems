#include <bits/stdc++.h>
#define int long long 
using namespace std;

int n;
vector<int> a;
map<pair<int, int>, int> dp;

int solve(int d, int w) {
    if(d == n) {
        return 0;
    }
    
    
    if(dp.find({d, w}) != dp.end()) {
        return dp[{d, w}];
    }
    
    w++;
    
    int max_p = 0;
    
    for(int i = 0; i <= min(2LL, w); i++) {
        int curr_p = i * a[d];
        int fut_p = solve(d + 1, w - i);
        max_p = max(max_p, curr_p + fut_p);
    }
    
    return dp[{d, w - 1}] = max_p;  
}

signed main() {
    int t;
    cin >> t;
    
    while(t--) {
        cin >> n;
        a.resize(n);
        
        for(int i = 0; i < n; i++) {
            cin >> a[i];
        }
        
        dp.clear();  
        cout << solve(0, 0) << endl;
    }
    
    return 0;
}
