#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        for (int i = 0; i < n; i++) cin >> a[i];

        int r = n - 1;

        while (r > 0 && a[r] == r + 1) {
            r--;
        }

        if (r == 0 && a[0] == 1) {
            cout << 0 << endl;
            continue;
        }

        cout << a[r] << endl;
    }
    return 0;
}
