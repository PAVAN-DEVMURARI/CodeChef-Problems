#include <bits/stdc++.h>
using namespace std;




int main() {
    int n;
    cin >> n;
    
    vector<int> arr(n);
    for (int i = 0; i < n; i++) 
    {
        arr[i] = i + 1;
    }

    cout << 2 << endl; 

    for (int i = 0; i < n; i++) 
    {
        cout << i+1 << " ";
    }
    cout << endl;
    for (int i = n-1; i >= 0; i--) 
    {
        cout << i+1 << " ";
    }
    cout << endl;
    

    return 0;
}
